<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="fill_parent"
    android:orientation="vertical"
     >
  
<!--订座 -->
    <LinearLayout
        android:id="@+id/item_book" 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@drawable/menu_selector"
        android:clickable="true">

        <ImageView 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
			android:layout_weight="1.4"
			android:layout_marginLeft="15dip"
            android:padding="10dip"
            android:src="@drawable/icon_user_selector"
            android:duplicateParentState="true"
            android:clickable="true"/>
        <TextView 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:paddingTop="2dip"
            android:paddingLeft="12dip"
            android:gravity="center|left"
            android:text="座位预订"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#333333"
        />
    <!--已订座位 -->
    <LinearLayout 
        android:id="@+id/item_own"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.8"
        android:background="@drawable/menu_selector"
        android:clickable="true">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"

			android:layout_marginLeft="14dip"
            android:padding="15dip"
            android:src="@drawable/icon_own_selector"
            android:duplicateParentState="true"
            android:clickable="true"/>
        <TextView 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:paddingLeft="11dip"
            android:paddingTop="2dip"
            android:gravity="center|left"
            android:text="已订座位"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#333333"/>
<!--WIFI -->

    <LinearLayout 
        android:id="@+id/item_wifi"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.8"
        android:background="@drawable/menu_selector"
        android:clickable="true">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"

			android:layout_marginLeft="4dip"
			android:paddingLeft="18dip"
			android:paddingTop="20dip"
			android:paddingBottom="18dip"

            android:src="@drawable/icon_wifi_selector"
            android:duplicateParentState="true"
            android:clickable="true"/>
        <TextView 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:paddingLeft="20dip"
            android:paddingTop="2dip"
            android:gravity="center|left"
            android:text="WLAN-CQUPT"
            android:textSize="16sp"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#333333"/>
        


<!--查看 -->
    <LinearLayout
        android:id="@+id/item_search" 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.8"
        android:background="@drawable/menu_selector"
        android:clickable="true">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"

			android:layout_marginLeft="12dip"
            android:padding="15dip"
            android:src="@drawable/icon_search_selector"
            android:duplicateParentState="true"
            android:clickable="true"/>
        <TextView 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:paddingLeft="11dip"
            android:paddingTop="2dip"
            android:gravity="center|left"
            android:text="座位分布"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
        
    </LinearLayout>
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#333333"
        />

<!--关于 -->
    <LinearLayout 
        android:id="@+id/item_info"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.8"
        android:background="@drawable/menu_selector"
        android:clickable="true">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"

			android:layout_marginLeft="14dip"
            android:padding="15dip"
            android:src="@drawable/icon_info_selector"
            android:duplicateParentState="true"
            android:clickable="true"/>
        <TextView 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:paddingLeft="12dip"
            android:paddingTop="2dip"
            android:gravity="center|left"
            android:text="帮助"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#333333"
        />
<!--反馈 -->
    <LinearLayout 
        android:id="@+id/item_email"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.8"
        android:background="@drawable/menu_selector"
        android:clickable="true">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"

			android:layout_marginLeft="13dip"
            android:padding="15dip"
            android:src="@drawable/icon_email_selector"
            android:duplicateParentState="true"
            android:clickable="true"/>
        <TextView 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:paddingLeft="11dip"
            
            android:gravity="center|left"
            android:text="反馈"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
    </LinearLayout>
    
    

    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#333333"
        />
